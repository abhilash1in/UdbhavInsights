<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">
    <EditText
        android:id="@+id/eve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Event Name"
        android:singleLine="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/firstPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="First place"
        android:singleLine="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/secondPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Second Place"
        android:singleLine="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/thirdPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Third place"
        android:singleLine="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_margin="10dp"/>


</LinearLayout>
